<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <title><%= blog.title %> - Blogify</title>
</head>
<body>
  <%- include('./partials/nav') %>

  <div class="container py-5">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <article>
          <header class="text-center mb-4">
            <h1 class="display-5 fw-bold mb-3"><%= blog.title %></h1>
            <div class="d-flex align-items-center justify-content-center mb-3">
              <i class="fas fa-user-circle fa-2x text-black me-3"></i>
              <div>
                <h6 class="mb-0"><%= blog.createdBy.fullName %></h6>
                <small class="text-muted">
                  <%= new Date(blog.createdAt).toLocaleDateString() %> â€¢ <%= blog.views %> views
                </small>
              </div>
            </div>
          </header>

          <% if (blog.coverImageURL) { %>
            <img src="<%= blog.coverImageURL %>" class="img-fluid rounded mb-4" alt="<%= blog.title %>">
          <% } %>

          <div class="blog-content">
            <p><%= blog.body %></p>
          </div>

          <% if (blog.tags && blog.tags.length > 0) { %>
            <div class="mt-4">
              <% blog.tags.forEach(tag => { %>
                <span class="badge bg-secondary me-1">#<%= tag %></span>
              <% }) %>
            </div>
          <% } %>
        </article>
      </div>
    </div>
  </div>

  <!-- Comments Section -->
  <div class="bg-light py-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto">
          <h3 class="mb-4">Comments (<%= comments.length %>)</h3>

          <% if (locals.user) { %>
            <div class="card mb-4">
              <div class="card-body">
                <form action="/blog/comment/<%= blog._id %>" method="post">
                  <div class="mb-3">
                    <textarea name="content" class="form-control" rows="3" placeholder="Share your thoughts..." required></textarea>
                  </div>
                  <button type="submit" class="btn btn-primary">Post Comment</button>
                </form>
              </div>
            </div>
          <% } else { %>
            <div class="card mb-4 bg-light">
              <div class="card-body text-center">
                <p>Please <a href="/user/signin">sign in</a> to leave a comment.</p>
              </div>
            </div>
          <% } %>

          <% if (comments.length > 0) { %>
            <% comments.forEach(comment => { %>
              <div class="comment-item">
                <div class="d-flex">
                  <i class="fas fa-user-circle fa-2x text-black me-3"></i>
                  <div>
                    <h6 class="mb-1"><%= comment.createdBy.fullName %></h6>
                    <small class="text-muted"><%= new Date(comment.createdAt).toLocaleString() %></small>
                    <p class="mt-2"><%= comment.content %></p>
                  </div>
                </div>
                <hr>
              </div>
            <% }) %>
          <% } else { %>
            <p class="text-muted">No comments yet. Be the first to comment!</p>
          <% } %>

        </div>
      </div>
    </div>
  </div>

  <%- include('./partials/scripts') %>
</body>
</html>
